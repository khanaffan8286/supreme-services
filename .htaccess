RewriteEngine On

# Project is in subfolder
RewriteBase /supreme-services/

# 1. Remove index.php from URL
RewriteCond %{THE_REQUEST} \s/+supreme-services/index\.php[\s?]
RewriteRule ^index\.php$ /supreme-services/ [R=301,L]

# 2. Direct PHP file access (contact â†’ contact.php)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([a-zA-Z0-9-]+)/?$ $1.php [L]

# 3. SEO dynamic slugs (washing-machine-repair-navi-mumbai)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.+)$ index.php?slug=$1 [L,QSA]
