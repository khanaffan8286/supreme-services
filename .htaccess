DirectoryIndex index.php
Options -Indexes

RewriteEngine On
RewriteBase /supreme-services/

# if folder requested â†’ load index.php
RewriteRule ^$ index.php [L]

# Remove index.php from URL
RewriteCond %{THE_REQUEST} \s/+supreme-services/index\.php[\s?]
RewriteRule ^index\.php$ /supreme-services/ [R=301,L]

# ============================
# ADMIN ROUTES
# ============================
RewriteRule ^admin/login/?$ admin/login.php [L]
RewriteRule ^admin/logout/?$ admin/logout.php [L]
RewriteRule ^admin/service-add/?$ admin/service-add.php [L]
RewriteRule ^admin/service-edit/?$ admin/service-edit.php [L]
RewriteRule ^admin/?$ admin/login.php [L]

# ============================
# STATIC FILE EXCLUSIONS
# ============================
RewriteCond %{REQUEST_URI} \.(css|js|png|jpg|jpeg|gif|svg|woff|woff2|ttf|ico)$ [NC]
RewriteRule ^ - [L]

# ============================
# SEO SLUG HANDLING
# ============================
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.+)$ index.php?slug=$1 [L,QSA]
